      <body>
        <div class="container">
            
            <header class="jumbotron">
                <h1>Movies in theatre!</h1>        
            </header>

            <div class="rowrow text-center"  style="display: flex; flex-wrap: wrap;">
                
                <% movies.forEach(function(movie){ %>
                    <div class="col-md-3 col-sm-6">

                        <div class="thumbnail">               
                            <img src="http://image.tmdb.org/t/p/w780/<%= movie.poster_path %>" class="img-thumbnail"/>

                            <div class="caption">
                                <p>
                                    <%= movie.title %>
                                    <br>
                                    <%= movie.release_date %>
                                </p>
                            </div>   

                        </div>               
                        
                    </div>
                <% }) %>

            </div>
        </div>
    </body>