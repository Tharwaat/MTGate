      <body>
        <div class="ui secondary pointing menu">
            <a class="active item">
                Home
            </a>
            <a class="item">
                Messages
            </a>
            <a class="item">
                Friends
            </a>
            <div class="right menu">
                <a class="ui item">
                Logout
                </a>
            </div>
        </div>
            
        <div class=" ui container">
            
            <div class="ui block header">
                <h2>Movies on theatre!</h2>
            </div>

            <div class="ui four doubling stackable link cards" >
                
                <% movies.forEach(function(movie){ %>
                    <div class="ui card">
                        <a class="image" href="/view/<%= movie.id %>">
                            <img src="http://image.tmdb.org/t/p/w780/<%= movie.poster_path %>">
                        </a>

                        <div class="content">
                            <div class="header"><%= movie.title %></div>
                            
                            <div class="meta">
                                <a>
                                    <%= movie.release_date %>
                                </a>
                            </div>

                            <div class="description">
                                Some words
                            </div>

                        </div>
                        
                        <!-- <div class="extra content">
                            <span class="right floated">
                            Joined in 2013
                            </span>

                            <span>
                                <i class="user icon"></i>
                                75 Friends
                            </span>
                        </div> -->
                    </div>                    
                <% }) %>
            </div>
        </div>
    </body>